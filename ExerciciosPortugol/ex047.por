programa
{
	
	funcao inicio()
	{
		escreva("---SOMA DA CONTAGEM 2---\n")
		inteiro c = 500
		inteiro soma = 0
		enquanto (c >= 0) {
			escreva (" + " + c)
			soma += c
			c -= 50
		}
		escreva(" = " + soma)
	}
}
